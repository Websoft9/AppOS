# AppOS Container Configuration
# Used by docker-compose.yml

# Container
CONTAINER_NAME=appos
IMAGE_TAG=latest          # Options: latest (production), dev (development)
RESTART_POLICY=unless-stopped

# Network
HTTP_PORT=9091
TUNNEL_SSH_PORT=9222

# Volumes
APPOS_DATA_PATH=/appos/data

# Initialization
INIT_MODE=auto                # auto: create superuser from env vars | setup: create via web UI

# Credentials
SUPERVISOR_PASSWORD=changeme
SUPERUSER_EMAIL=admin@websoft9.com
SUPERUSER_PASSWORD=changeme123

# Redis Configuration
REDIS_ADDR=127.0.0.1:6379
